@model IEnumerable<QuanLyCuaHangTapHoa.Models.HangHoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}

<h2>Danh sách hàng hóa</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenHangHoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaVon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TinhTrang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnhMoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MucThue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonViTinh.TenDVT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhaCungCap.TenNhaCungCap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thue.TenThue)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenHangHoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaVon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinhTrang)
            </td>
            <td>
                <br />
                <img src="~/Content/images/@item.AnhMoTa" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MucThue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonViTinh.TenDVT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaCungCap.TenNhaCungCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thue.TenThue)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaHangHoa.Trim() }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaHangHoa.Trim() }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaHangHoa.Trim() })
            </td>
        </tr>
    }
</table>